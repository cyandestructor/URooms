<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Fecha de vencimiento"
        android:textColor="#C1C1C1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_assignment_due_date"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_due_date" />

    <TextView
        android:id="@+id/textView_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Puntos"
        android:textColor="#C1C1C1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_assignment_score"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_score" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purpura"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Crear tarea" />

    <Button
        android:id="@+id/btn_AsignTar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/purple_500"
        android:text="Asignar tarea"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_due_date"
        app:layout_constraintTop_toBottomOf="@+id/edit_assignment_due_date" />

    <EditText
        android:id="@+id/edit_assignment_name"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/purple_700"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edit_assignment_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/purple_700"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_description"
        app:layout_constraintTop_toBottomOf="@+id/edit_assignment_description"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edit_assignment_due_date"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/purple_700"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:minHeight="48dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_score"
        app:layout_constraintTop_toBottomOf="@+id/edit_assignment_score"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Titulo"
        android:textColor="#C1C1C1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_assignment_name"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_name" />

    <EditText
        android:id="@+id/edit_assignment_description"
        android:layout_width="284dp"
        android:layout_height="122dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_assignment_name" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Instrucciones"
        android:textColor="#C1C1C1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_assignment_description"
        app:layout_constraintStart_toStartOf="@+id/edit_assignment_description" />

</androidx.constraintlayout.widget.ConstraintLayout>