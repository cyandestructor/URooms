<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#ffffff">

        <androidx.cardview.widget.CardView
            android:id="@+id/imagen_equipo_cuadro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/icono_pic_grupo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/foto_perfil"
                app:srcCompat="@drawable/avatar_placeholder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titulo_nombre"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imagen_equipo_cuadro"
            android:text="Guille"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>


        <TextView
            android:id="@+id/lastMessageBody"
            android:layout_width="226dp"
            android:layout_height="28dp"
            android:layout_below="@+id/titulo_nombre"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imagen_equipo_cuadro"
            android:text="Â¿Donde estas perdida?"
            android:textColor="#818181"
            android:textSize="15sp">

        </TextView>

    </RelativeLayout>


</RelativeLayout>