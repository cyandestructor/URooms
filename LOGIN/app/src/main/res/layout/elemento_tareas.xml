<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="#ffffff">

        <androidx.cardview.widget.CardView
            android:id="@+id/imagen_equipo_cuadro"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/icono_pic_grupo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tarea_aviso_bell" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Nombre_curso"
            android:layout_width="221dp"
            android:layout_height="27dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imagen_equipo_cuadro"
            android:text="CLASE ORDINARIA POI"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>


        <TextView
            android:id="@+id/estado_tarea"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/Nombre_curso"
            android:text="Vencida"
            android:textColor="#FF9800"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/texto_info"
            android:layout_width="226dp"
            android:layout_height="26dp"
            android:layout_below="@+id/Nombre_curso"
            android:layout_marginStart="-26dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/imagen_equipo_cuadro"
            android:text=" Entrega de PIA"
            android:textColor="#590C0C"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/fecha_vencimiento"
            android:layout_width="226dp"
            android:layout_height="28dp"
            android:layout_below="@+id/texto_info"
            android:layout_marginLeft="-26dp"
            android:layout_marginTop="-15dp"
            android:layout_toRightOf="@id/imagen_equipo_cuadro"
            android:text="Vence el 13 de Junio"
            android:textColor="#818181"
            android:textSize="15sp">

        </TextView>

    </RelativeLayout>


</RelativeLayout>