<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView_Inst2"
        android:layout_width="77dp"
        android:layout_height="18dp"
        android:layout_marginTop="25dp"
        android:text="Adjuntar"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/textView_instruccionestarea" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purpura"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#00FFFFFF"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/ic_return"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView_equiponame"
        android:layout_width="227dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-light"
        android:text=" POI GPO 02 2021"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/imageButton_return" />

    <Button
        android:id="@+id/button_EntregarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/purple_700"
        android:text="ENTREGAR"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView_tematarea"
        android:layout_width="301dp"
        android:layout_height="26dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:text="Proyecto Final"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView_VencimientoTarea"
        android:layout_width="298dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Vence el 28 de mayo del 2021"
        android:textColor="#A1A1A1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tematarea" />

    <TextView
        android:id="@+id/textView_Inst"
        android:layout_width="298dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:text="Instrucciones:"
        android:textColor="#989898"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tematarea" />

    <TextView
        android:id="@+id/textView_instruccionestarea"
        android:layout_width="341dp"
        android:layout_height="136dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Subir archivo .zip con todo el proyecto "
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Inst" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_700"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_instruccionestarea"
        app:srcCompat="@drawable/ic_adjfile"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>