<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/mensaje_cont"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:background="#EAEAEA"
            android:orientation="horizontal"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/imagen_equipo_cuadro"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/icono_pic_grupo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/foto_perfil" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/Propietario_mensaje"
                android:layout_width="127dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/imagen_equipo_cuadro"
                android:text="Guillermo Rocha"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/fecha_mensaje"
                android:layout_width="145dp"
                android:layout_height="18dp"
                android:layout_below="@+id/Propietario_mensaje"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="197dp"
                android:layout_toEndOf="@+id/imagen_equipo_cuadro"
                android:text="10 sep 9:04 a.m."
                android:textColor="#757575" />

            <TextView
                android:id="@+id/msj_cont"
                android:layout_width="wrap_content"
                android:layout_height="128dp"
                android:layout_below="@+id/Propietario_mensaje"
                android:layout_marginTop="19dp"
                android:text="Chicos, les quiero decir que AdiÃ³s, Bye Bye, Au revoir, Sayonara se los digo como quiera ya no quiero ver su cara "
                android:textColor="@color/black" />


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>